<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainBackGround"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/wplandscape854x480"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/cameraIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:src="@drawable/camera51x40" />

        <LinearLayout
            android:id="@+id/headerTextOuterLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/headerTextLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/signuptextlogo" />
        </LinearLayout>

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:src="@drawable/search51x40" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trialConcept"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/trialText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="Using for Demo"
            android:textColor="#FF0000"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sorryTextlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <TextView
            android:id="@+id/sorryText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mainlistbackground"
            android:padding="10dp"
            android:text="Sorry there are no events of this category!"
            android:textColor="#000000"
            android:textSize="25dp" />
    </LinearLayout>

</LinearLayout>